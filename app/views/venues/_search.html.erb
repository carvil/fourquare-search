<%= form_tag search_path, remote: true, id: 'search-form' do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], id: "search-input", class: "span3", placeholder: "e.g. starbucks" %>
    <%= submit_tag "Search", class: "btn", disable_with: "Please wait..." %>
  </div>
<% end %>
